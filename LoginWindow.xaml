<Window x:Class="HollywoodHostelsPaymentSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="320" Width="400"
        Background="#f4f6f8" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="None">

    <Grid>
        <!-- Main Card -->
        <Border Background="White" CornerRadius="12" Padding="0"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="320"
                BorderBrush="#ddd" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>

            <StackPanel>
                <!-- Custom Top Bar -->
                <DockPanel Background="#2196F3" Height="35" LastChildFill="False">
                    <TextBlock Text="Login" Foreground="White" FontWeight="Bold" 
                               VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <Button Content="✖" Width="35" Height="35" Background="Transparent" Foreground="White"
                            BorderThickness="0" FontSize="14" FontWeight="Bold"
                            Cursor="Hand" DockPanel.Dock="Right"
                            Click="BtnClose_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="Transparent">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#1976D2"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </DockPanel>

                <!-- Login Form -->
                <StackPanel Margin="20">
                    <!-- Username -->
                    <Label Content="Username" FontWeight="Bold" FontSize="12"/>
                    <TextBox x:Name="txtUsername" Height="35" FontSize="14" Padding="5" 
                             BorderBrush="#ccc" BorderThickness="1" Margin="0,0,0,10"/>

                    <!-- Password -->
                    <Label Content="Password" FontWeight="Bold" FontSize="12"/>
                    <PasswordBox x:Name="txtPassword" Height="35" FontSize="14" Padding="5" 
                                 BorderBrush="#ccc" BorderThickness="1" Margin="0,0,0,15"/>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Login" Width="100" Height="35"
                                Background="#2196F3" Foreground="White"
                                FontWeight="SemiBold" BorderThickness="0" Margin="0,0,10,0"
                                Click="BtnLogin_Click" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="#2196F3" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#1976D2"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Content="Cancel" Width="100" Height="35"
                                Background="#e0e0e0" Foreground="#333"
                                FontWeight="SemiBold" BorderThickness="0"
                                Click="BtnCancel_Click" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="#e0e0e0" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#bdbdbd"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
