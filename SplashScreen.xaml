<Window x:Class="HollywoodHostelsPaymentSystem.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#f4f6f8"
        Width="400" Height="300"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Topmost="True">

    <Grid>
        <Border Background="White" CornerRadius="15" Padding="20" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                BorderBrush="#ddd" BorderThickness="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Logo -->
                <Image Source="image/logo.png" Width="300" Height="150" Stretch="Uniform" Margin="0,0,0,10"/>
                <!-- App Name -->
                <TextBlock Text="Hollywood Hostels Payment System" 
                           FontSize="16" FontWeight="Bold" 
                           Foreground="#333" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
