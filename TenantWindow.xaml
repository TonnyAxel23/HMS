<Window x:Class="HollywoodHostelsPaymentSystem.TenantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tenant Management" Height="550" Width="1000"
        Background="#f4f6f8" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Input Fields & Action Buttons -->
        <Border Background="White" CornerRadius="10" Padding="10" Margin="0,0,-7,15"
                BorderBrush="#ddd" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                <!-- Room No -->
                <StackPanel Margin="0,0,8,0">
                    <Label Content="Room No" FontWeight="Bold" FontSize="12"/>
                    <TextBox x:Name="txtRoomNo" Width="100" FontSize="14" Padding="5"/>
                </StackPanel>

                <!-- Name -->
                <StackPanel Margin="0,0,8,0">
                    <Label Content="Name" FontWeight="Bold" FontSize="12"/>
                    <TextBox x:Name="txtName" Width="180" FontSize="14" Padding="5"/>
                </StackPanel>

                <!-- Phone -->
                <StackPanel Margin="0,0,8,0">
                    <Label Content="Phone" FontWeight="Bold" FontSize="12"/>
                    <TextBox x:Name="txtPhone" Width="130" FontSize="14" Padding="5"/>
                </StackPanel>

                <!-- Monthly Fee -->
                <StackPanel Margin="0,0,8,0">
                    <Label Content="Monthly Fee" FontWeight="Bold" FontSize="12"/>
                    <TextBox x:Name="txtMonthlyFee" Width="100" FontSize="14" Padding="5"/>
                </StackPanel>

                <!-- Holiday Fee -->
                <StackPanel Margin="0,0,12,0">
                    <Label Content="Holiday Fee" FontWeight="Bold" FontSize="12"/>
                    <TextBox x:Name="txtHolidayFee" Width="100" FontSize="14" Padding="5"/>
                </StackPanel>

                <!-- Add Button -->
                <StackPanel VerticalAlignment="Bottom" Orientation="Vertical" Margin="0,0,8,0">
                    <Button Width="32" Height="25" Background="#4CAF50" Foreground="White"
                            FontWeight="SemiBold" BorderThickness="0" Click="BtnAdd_Click" Cursor="Hand">
                        Add
                    </Button>
                </StackPanel>

                <!-- Update Button -->
                <StackPanel VerticalAlignment="Bottom" Orientation="Vertical" Margin="0,0,8,0">
                    <Button Width="43" Height="24" Background="#2196F3" Foreground="White"
                            FontWeight="SemiBold" BorderThickness="0" Click="BtnUpdate_Click" Cursor="Hand">
                        Update
                    </Button>
                </StackPanel>

                <!-- Delete Button -->
                <StackPanel VerticalAlignment="Bottom" Orientation="Vertical" Margin="0,0,8,0">
                    <Button Width="37" Height="25" Background="#F44336" Foreground="White"
                            FontWeight="SemiBold" BorderThickness="0" Click="BtnDelete_Click" Cursor="Hand">
                        Delete
                    </Button>
                </StackPanel>

                <!-- Export CSV Button -->
                <StackPanel VerticalAlignment="Bottom" Orientation="Vertical" Margin="0,0,8,0">
                    <Button Width="64" Height="24" Background="#FF9800" Foreground="White"
                            FontWeight="SemiBold" BorderThickness="0" Click="BtnExportCsv_Tenants_Click" Cursor="Hand">
                        Export CSV
                    </Button>
                </StackPanel>

                <!-- Back to Menu Button -->
                <StackPanel VerticalAlignment="Bottom" Orientation="Vertical" Margin="10,0,0,0">
                    <Button Width="75" Height="25" Background="#9C27B0" Foreground="White"
                            FontWeight="SemiBold" BorderThickness="0" Click="BackToMainMenu_Click" Cursor="Hand">
                        Back to Menu
                    </Button>
                </StackPanel>

            </StackPanel>
        </Border>

        <!-- Search Box -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8" HorizontalAlignment="Left">
            <Label Content="Search:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="Bold"/>
            <TextBox x:Name="txtSearch" Width="320" VerticalAlignment="Center"
                     TextChanged="TxtSearch_TextChanged" FontSize="14" Padding="5"/>
        </StackPanel>

        <!-- Tenants DataGrid -->
        <DataGrid x:Name="dgTenants" Grid.Row="2" AutoGenerateColumns="False" SelectionMode="Single"
                  SelectionChanged="DgTenants_SelectionChanged"
                  AlternatingRowBackground="#f9f9f9" RowHeight="35"
                  FontSize="14" BorderBrush="#ddd" BorderThickness="1"
                  GridLinesVisibility="None" CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#2196F3"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="8"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Room No" Binding="{Binding RoomNo}" Width="100"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="180"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="130"/>
                <DataGridTextColumn Header="Monthly Fee" Binding="{Binding MonthlyFee}" Width="100"/>
                <DataGridTextColumn Header="Holiday Fee" Binding="{Binding HolidayFee}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>