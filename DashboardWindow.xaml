<Window x:Class="HollywoodHostelsPaymentSystem.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard - Hollywood Hostels" Height="550" Width="950"
        Background="#f4f6f8" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- SUMMARY CARDS -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">

            <!-- Total Tenants -->
            <Border Background="#2196F3" CornerRadius="10" Padding="20" Width="200" Margin="0,0,20,0">
                <StackPanel>
                    <TextBlock Text="Total Tenants" Foreground="White" FontSize="14" FontWeight="Bold"/>
                    <TextBlock x:Name="txtTotalTenants" Foreground="White" FontSize="22" FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Total Collected -->
            <Border Background="#4CAF50" CornerRadius="10" Padding="20" Width="200" Margin="0,0,20,0">
                <StackPanel>
                    <TextBlock Text="Collected" Foreground="White" FontSize="14" FontWeight="Bold"/>
                    <TextBlock x:Name="txtTotalCollected" Foreground="White" FontSize="22" FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Outstanding -->
            <Border Background="#FF9800" CornerRadius="10" Padding="20" Width="200">
                <StackPanel>
                    <TextBlock Text="Outstanding" Foreground="White" FontSize="14" FontWeight="Bold"/>
                    <TextBlock x:Name="txtOutstanding" Foreground="White" FontSize="22" FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

        </StackPanel>

        <!-- UNPAID TENANTS TABLE -->
        <DataGrid x:Name="dgUnpaid" Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  AlternatingRowBackground="#f1f1f1"
                  GridLinesVisibility="None"
                  RowHeight="35"
                  FontSize="14"
                  Margin="0,0,0,20">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#2196F3"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="8"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Room No" Binding="{Binding RoomNo}" Width="100"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Unpaid Months" Binding="{Binding UnpaidMonths}" Width="300"/>
                <DataGridTextColumn Header="Balance Due" Binding="{Binding BalanceDue}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- ACTION BUTTONS -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">

            <!-- Back to Menu Button -->
            <Button Width="150" Height="40" Margin="0,0,10,0"
                    Background="#9C27B0" Foreground="White"
                    FontWeight="SemiBold" BorderThickness="0"
                    Click="BackToMainMenu_Click" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="#9C27B0" CornerRadius="8" Padding="10">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="←" Margin="0,0,5,0"/>
                                <TextBlock Text="Back to Menu"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#7B1FA2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Print Button -->
            <Button Width="150" Height="40" Margin="0,0,10,0"
                    Background="#2196F3" Foreground="White"
                    FontWeight="SemiBold" BorderThickness="0"
                    Click="BtnPrint_Click" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="#2196F3" CornerRadius="8" Padding="10">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="🖨" Margin="0,0,5,0"/>
                                <TextBlock Text="Print Report"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- PDF Export Button -->
            <Button Width="150" Height="40"
                    Background="#4CAF50" Foreground="White"
                    FontWeight="SemiBold" BorderThickness="0"
                    Click="BtnExportPDF_Click" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="#4CAF50" CornerRadius="8" Padding="10">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="📄" Margin="0,0,5,0"/>
                                <TextBlock Text="Export PDF"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#388E3C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </StackPanel>
    </Grid>
</Window>
